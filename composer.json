{
    "name": "matesofmate/phpunit-extension",
    "description": "PHPUnit extension for symfony/ai-mate providing token-optimized test execution tools",
    "type": "symfony-ai-mate",
    "license": "MIT",
    "keywords": ["phpunit", "testing", "ai-mate", "mcp", "test-automation", "toon", "symfony", "ai"],
    "authors": [
        {
            "name": "Johannes Wachter",
            "email": "johannes@sulu.io"
        }
    ],
    "require": {
        "php": ">=8.2",
        "helgesverre/toon": "^1.0",
        "symfony/ai-mate": "^0.1",
        "symfony/finder": "^6.0|^7.0",
        "symfony/process": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "MatesOfMate\\PHPUnitExtension\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MatesOfMate\\PHPUnitExtension\\Tests\\": "tests/"
        }
    },
    "extra": {
        "ai-mate": {
            "scan-dirs": [
                "src/Capability"
            ],
            "includes": ["config/services.php"]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "lint": [
            "@composer validate --strict",
            "vendor/bin/rector process --dry-run",
            "vendor/bin/php-cs-fixer fix --dry-run --diff",
            "vendor/bin/phpstan analyse"
        ],
        "fix": [
            "vendor/bin/rector process",
            "vendor/bin/php-cs-fixer fix"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
