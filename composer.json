{
    "name": "matesofmate/example-extension",
    "description": "Example extension for Symfony AI Mate - replace with your description",
    "type": "library",
    "license": "MIT",
    "keywords": ["symfony", "ai", "mate", "mcp", "ai-assistant"],
    "authors": [
        {
            "name": "Your Name",
            "email": "your@email.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/ai-mate": "^0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "MatesOfMate\\ExampleExtension\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MatesOfMate\\ExampleExtension\\Tests\\": "tests/"
        }
    },
    "extra": {
        "ai-mate": {
            "scan-dirs": [
                "src/Capability"
            ],
            "includes": ["config/services.php"]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "lint": [
            "@composer validate --strict",
            "vendor/bin/rector process --dry-run",
            "vendor/bin/php-cs-fixer fix --dry-run --diff",
            "vendor/bin/phpstan analyse"
        ],
        "fix": [
            "vendor/bin/rector process",
            "vendor/bin/php-cs-fixer fix"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
